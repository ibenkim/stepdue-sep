{
  "manifest_version": 3,
  "name": "stepdue",
  "version": "0.2.0",
  "description": "Browser-native accountability mirror for students.",
  "permissions": ["tabs", "storage", "alarms", "sidePanel"],
  "host_permissions": [
    "https://*.azurewebsites.net/*",
    "https://*.azurestaticapps.net/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "stepdue",
    "default_icon": "icon.png"
  },
  "side_panel": {
    "default_path": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "css": ["content/content.css"],
      "run_at": "document_start"
    }
  ]
}
